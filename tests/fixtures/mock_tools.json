[
  {
    "name": "click",
    "description": "Click on an element by its selector",
    "inputSchema": {
      "type": "object",
      "required": ["selector"],
      "properties": {
        "selector": {
          "type": "string",
          "description": "CSS selector for the element to click"
        },
        "timeout": {
          "type": "integer",
          "description": "Timeout in milliseconds",
          "default": 5000
        }
      }
    }
  },
  {
    "name": "navigate",
    "description": "Navigate to a URL",
    "inputSchema": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "description": "URL to navigate to"
        },
        "waitUntil": {
          "type": "string",
          "enum": ["load", "domcontentloaded", "networkidle"],
          "description": "When to consider navigation complete"
        }
      }
    }
  },
  {
    "name": "search",
    "description": "Search with complex parameters",
    "inputSchema": {
      "type": "object",
      "required": ["query", "sources"],
      "properties": {
        "query": {
          "type": "string",
          "description": "Search query"
        },
        "sources": {
          "type": "array",
          "items": {"type": "string"},
          "description": "List of sources to search"
        },
        "limit": {
          "type": "integer",
          "description": "Maximum results",
          "default": 10
        },
        "includeMetadata": {
          "type": "boolean",
          "description": "Include metadata in results",
          "default": false
        },
        "sortBy": {
          "type": "string",
          "enum": ["relevance", "date", "title"],
          "description": "Sort order"
        },
        "filters": {
          "type": "object",
          "description": "Additional filters as JSON"
        },
        "threshold": {
          "type": "number",
          "description": "Confidence threshold (0.0-1.0)"
        }
      }
    }
  },
  {
    "name": "get_status",
    "description": "Get current status with no parameters",
    "inputSchema": {
      "type": "object",
      "properties": {}
    }
  },
  {
    "name": "array_tool",
    "description": "Tool with array and object parameters",
    "inputSchema": {
      "type": "object",
      "required": ["items"],
      "properties": {
        "items": {
          "type": "array",
          "items": {"type": "integer"},
          "description": "List of integers"
        },
        "config": {
          "type": "object",
          "description": "Configuration object"
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "List of tags"
        }
      }
    }
  },
  {
    "name": "all_types",
    "description": "Tool demonstrating all supported parameter types",
    "inputSchema": {
      "type": "object",
      "required": ["text", "count"],
      "properties": {
        "text": {
          "type": "string",
          "description": "A string parameter"
        },
        "count": {
          "type": "integer",
          "description": "An integer parameter"
        },
        "ratio": {
          "type": "number",
          "description": "A float parameter"
        },
        "enabled": {
          "type": "boolean",
          "description": "A boolean parameter"
        },
        "mode": {
          "type": "string",
          "enum": ["fast", "normal", "accurate"],
          "description": "Mode selection"
        },
        "values": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Array of strings"
        },
        "metadata": {
          "type": "object",
          "description": "Metadata object"
        }
      }
    }
  }
]
